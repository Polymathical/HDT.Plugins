<UserControl 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HDT.Plugins.Custom"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" 
        x:Class="HDT.Plugins.Custom.MetaDataView"
        xmlns:cc="clr-namespace:HDT.Plugins.Custom.Controls"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:HDT.Plugins.Custom.ViewModels"
        Width="180" Height="Auto"
        x:Name="DisplayList" BorderBrush="Gray" BorderThickness="2" LayoutUpdated="DisplayList_LayoutUpdated">
    <UserControl.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlDarkDarkColorKey}}"/>
    </UserControl.Background>
    <UserControl.DataContext>
        <vm:WindowViewModel/>
    </UserControl.DataContext>
    <StackPanel Height="Auto">
        <cc:CardInfoView DataContext="{Binding CardInfo}" FontWeight="Bold"/>
        <cc:CardTypeCountView DataContext="{Binding CardTypeCount}" />
        <cc:ExtraInfoView DataContext="{Binding ExtraInfo}" />
        <cc:MulliganOddsView DataContext="{Binding MulliganCardOdds}" /> 
    </StackPanel>
</UserControl>
 
