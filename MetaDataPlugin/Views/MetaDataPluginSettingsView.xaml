<Window x:Class="HDT.Plugins.Custom.Controls.MetaDataPluginSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HDT.Plugins.Custom"
             xmlns:hdt="clr-namespace:Hearthstone_Deck_Tracker;assembly=HearthstoneDeckTracker"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <StackPanel>
        <CheckBox Grid.Column="0" IsChecked="{Binding EnableVerticalCardInfoBars, Source={x:Static local:MetaDataPluginSettings.Default}}">
            <TextBlock Grid.Column="1" FontSize="12" Text="Use Vertical Card Info Bars" />
        </CheckBox>
        <Button Click="Button_Click" Width="40">
            <TextBlock Text="Close" FontSize="12"/>
        </Button>
    </StackPanel>
    
</Window>
